{
	"activationEvents": [
		"onLanguage:python",
		"workspaceContains:pyproject.toml",
		"workspaceContains:.isort"
	],
	"capabilities": {
		"virtualWorkspaces": {
			"description": "Virtual Workspaces are not supported with isort.",
			"supported": false
		}
	},
	"contributes": {
		"commands": [
			{
				"category": "isort",
				"command": "isort.restart",
				"title": "%command.restartServer%"
			}
		],
		"configuration": {
			"properties": {
				"isort.args": {
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.args.description%",
					"scope": "resource",
					"type": "array"
				},
				"isort.check": {
					"default": false,
					"markdownDescription": "%settings.check.description%",
					"scope": "resource",
					"tags": [
						"experimental"
					],
					"type": "boolean"
				},
				"isort.importStrategy": {
					"default": "useBundled",
					"enum": [
						"useBundled",
						"fromEnvironment"
					],
					"enumDescriptions": [
						"%settings.importStrategy.useBundled.description%",
						"%settings.importStrategy.fromEnvironment.description%"
					],
					"markdownDescription": "%settings.importStrategy.description%",
					"scope": "resource",
					"type": "string"
				},
				"isort.interpreter": {
					"default": [],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.interpreter.description%",
					"scope": "resource",
					"type": "array"
				},
				"isort.path": {
					"default": [],
					"examples": [
						[
							"~/global_env/isort"
						],
						[
							"~/.env/python",
							"-m",
							"isort"
						]
					],
					"items": {
						"type": "string"
					},
					"markdownDescription": "%settings.path.description%",
					"scope": "resource",
					"type": "array"
				},
				"isort.serverEnabled": {
					"default": true,
					"markdownDescription": "%settings.serverEnabled.description%",
					"scope": "machine",
					"type": "boolean"
				},
				"isort.severity": {
					"additionalProperties": {
						"enum": [
							"Error",
							"Hint",
							"Information",
							"Warning"
						],
						"type": "string"
					},
					"default": {
						"E": "Hint",
						"W": "Warning"
					},
					"markdownDescription": "%settings.severity.description%",
					"scope": "resource",
					"type": "object"
				},
				"isort.showNotifications": {
					"default": "off",
					"enum": [
						"off",
						"onError",
						"onWarning",
						"always"
					],
					"enumDescriptions": [
						"%settings.showNotifications.off.description%",
						"%settings.showNotifications.onError.description%",
						"%settings.showNotifications.onWarning.description%",
						"%settings.showNotifications.always.description%"
					],
					"markdownDescription": "%settings.showNotifications.description%",
					"scope": "machine",
					"type": "string"
				}
			}
		},
		"languages": [
			{
				"filenames": [
					"pyproject.toml",
					".isort"
				],
				"id": "toml"
			}
		]
	},
	"dependencies": {
		"fs-extra": "11.2.0"
	},
	"description": "%extension.description%",
	"devDependencies": {
		"@types/chai": "5.0.1",
		"@types/chai-arrays": "2.0.3",
		"@types/chai-as-promised": "8.0.1",
		"@types/fs-extra": "11.0.4",
		"@types/glob": "8.1.0",
		"@types/node": "22.10.0",
		"@types/sinon": "17.0.3",
		"chai": "5.1.2",
		"chai-arrays": "2.2.0",
		"chai-as-promised": "8.0.1",
		"glob": "11.0.0",
		"sinon": "19.0.2",
		"ts-loader": "9.5.1",
		"typemoq": "2.1.0"
	},
	"displayName": "isort",
	"extensionDependencies": [
		"ms-python.python"
	],
	"galleryBanner": {
		"color": "#1e415e",
		"theme": "dark"
	},
	"icon": "icon.png",
	"l10n": "./l10n",
	"main": "./dist/extension.js",
	"name": "isort",
	"preview": true,
	"scripts": {
		"compile": "webpack",
		"compile-tests": "tsc -p . --outDir out",
		"tests": "node ./out/test/ts_tests/runTest.js",
		"vsce-package": "vsce package -o isort.vsix",
		"watch-tests": "tsc -p . -w --outDir out"
	},
	"serverInfo": {
		"module": "isort",
		"name": "isort"
	}
}
